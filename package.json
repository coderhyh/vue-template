{
  "name": "vue-template",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=16.17.1"
  },
  "scripts": {
    "serve": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "pnpm lint:script && pnpm lint:style",
    "lint:script": "eslint . --fix",
    "lint:style": "stylelint \"./src/**/*.{css,less,vue,html}\" --fix",
    "init": "pnpm i && git init && npx simple-git-hooks"
  },
  "dependencies": {
    "@vue/runtime-core": "^3.5.13",
    "@vueuse/core": "^12.0.0",
    "animate.css": "^4.1.1",
    "axios": "^1.7.8",
    "element-plus": "^2.8.8",
    "nprogress": "^0.2.0",
    "pinia": "^2.2.7",
    "pinia-plugin-persistedstate": "^3.2.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@iconify/json": "^2.2.215",
    "@types/node": "^18.17.18",
    "@types/nprogress": "^0.2.0",
    "@unocss/eslint-plugin": "^0.64.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "2.4.1",
    "eslint": "^9.15.0",
    "eslint-plugin-format": "^0.1.3",
    "hyh-toolkit": "^0.4.1",
    "less": "^4.2.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.30",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "postcss-preset-env": "^9.1.4",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-less": "^2.0.0",
    "stylelint-order": "^6.0.3",
    "terser": "^5.20.0",
    "typescript": "^5.7.2",
    "unocss": "^0.64.1",
    "unplugin-auto-export": "^1.0.1",
    "unplugin-auto-import": "^0.18.6",
    "unplugin-vue-components": "^0.27.5",
    "vite": "^5.4.11",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-vue-devtools": "^7.6.5",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": "pnpm lint:script",
    "*.{css,less,vue,html}": "pnpm lint:style"
  }
}
